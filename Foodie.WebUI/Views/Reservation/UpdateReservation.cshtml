@model GetReservationByIdDto
@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Update Reservation</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ReservationID" />
                            <label>Customer Name</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>E-mail</label>
                            <input type="email" asp-for="Mail" class="form-control"/>
                            <br />
                            <label>Phone Number</label>
                            <input type="tel" asp-for="Phone" class="form-control" />
                            <br />
                            <label>Reservation Date</label>
                            <input type="date" asp-for="ReservationDate" class="form-control" />
                            <br />
                            <label>Reservation Time</label>
                            <input type="time" asp-for="ReservationTime" class="form-control" />
                            <br />
                            <label>Number of People</label>
                            <input type="text" asp-for="NumberOfPeople" class="form-control" />
                            <br />
                            <label>Message</label>
                            <textarea asp-for="Message" rows="5" class="form-control"></textarea>
                            <br />
                            <label>Status</label>
                            <input type="text" asp-for="ReservationStatus" class="form-control" />
                            <br />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






