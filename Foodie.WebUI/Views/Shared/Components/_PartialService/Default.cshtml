@model List<ResultServiceDto>

<section id="why-us" class="why-us section light-background">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="why-box">
                    <h3>Why Choose Yummy</h3>
                    <p>
                        Yummy is a modern cooking platform designed to bring flavor and inspiration into your kitchen.                       
                        With a clean design and user-friendly experience, Yummy makes cooking enjoyable and accessible.
                        Discover new tastes, learn new techniques, and let Yummy guide you on your culinary journey.
                        Enjoy the art of cooking with dishes that look great and taste even better.
                    </p>
                    <div class="text-center">
                        <a href="#" class="more-btn"><span>Learn More</span> <i class="bi bi-chevron-right"></i></a>
                    </div>
                </div>
            </div><!-- End Why Box -->

            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="row gy-4" data-aos="fade-up" data-aos-delay="200">

                    @foreach(var item in Model)
                    {
                        <div class="col-xl-4">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="@item.IconUrl"></i>
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>                  
                        <!-- End Icon Box -->        
                    }              

                </div>
            </div>

        </div>

    </div>

</section><!-- /Why Us Section -->