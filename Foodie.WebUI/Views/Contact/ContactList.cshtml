@model List<ResultContactDto>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Contact List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>

                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Open Hours</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.ContactID</th>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.OpenHours</td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-primary">Edit</a></td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-success">New Contact</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>


