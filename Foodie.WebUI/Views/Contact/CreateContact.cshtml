@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/Admin/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>New Contact</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Mail</label>
                            <input type="text" asp-for="Email" class="form-control"/>
                            <br />
                            <label>Phone</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                            <br />
                            <label>Open Hours</label>
                            <input type="text" asp-for="OpenHours" class="form-control" />
                            <br />
                            <label>Address</label>
                            <textarea asp-for="Address" rows="5" class="form-control"></textarea>
                            <br />
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

