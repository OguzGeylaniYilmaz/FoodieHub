@model List<ResultProductDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Category List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>

                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Category Name</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.ProductID</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-primary">Edit</a></td>
                                        <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct/" class="btn btn-success">Create Product</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>





