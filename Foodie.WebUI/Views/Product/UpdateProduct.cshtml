@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit Product</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ProductID"/>
                            <label>Product Name</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />
                            <label>Description</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label>Price</label>
                            <input type="number" asp-for="Price" class="form-control" />
                            <br />
                            <label>Image Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

