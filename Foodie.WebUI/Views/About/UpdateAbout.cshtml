@model GetAboutByIdDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Admin/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Update About</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="AboutID"/>
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Description</label>
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <br />
                            <label>Reservation Number</label>
                            <input type="text" asp-for="ReservationNumber" class="form-control" />
                            <br />
                            <label>Image Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Video Url</label>
                            <input type="text" asp-for="VideoUrl" class="form-control" />
                            <br />
                            <label>Video Cover Image</label>
                            <input type="text" asp-for="VideoCoverImageUrl" class="form-control" />
                            <br />
                            <button type="submit" class="btn btn-primary">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






